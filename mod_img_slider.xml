<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.3" client="site" method="upgrade">
	<name>Image Slider</name>
	<author>Jeppe Stockmar</author>
	<creationDate>15/04/2015</creationDate>
	<copyright>Copyright (C) 2015 Stockmar. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later</license>
	<authorEmail>info@stockmar.dk</authorEmail>
	<authorUrl>www.jeppestockmar.dk</authorUrl>
	<version>1.0</version>
	<description>		
		<![CDATA[
		<div>
			<img src="../templates/stockmartemplate/img/stockmar-logo.png" />
			<h1>Image Sider Module</h1>
			<p>A very simple image slider module</p>
			<p><img src="../modules/mod_img_slider/img/timeline_preview.png" /></p>
		</div>	
		<p>Created by <a href="http://www.stockmar.dk" target="_blank">Stockmar | stockmar.dk</a></p>
		<p>v. 1.0</p>
		]]>
	</description>
	<files>
		<filename module="mod_img_slider">mod_img_slider.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>README.md</filename>
		<folder>css</folder>
		<folder>img</folder>
		<folder>js</folder>
		<folder>tmpl</folder>
		<folder>language</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_img_slider.ini</language>
		<language tag="en-GB">language/da-DK/da-DK.mod_img_slider.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
 				
 				<field name="text-options1" type="spacer" default="" label="Image Slider" description="Text Settings" />

				<field name="logo_file_01" type="media" label="Select your image:"></field>
				<field name="logo_file_02" type="media" label="Select your image:"></field>
				<field name="logo_file_03" type="media" label="Select your image:"></field>
				<field name="logo_file_04" type="media" label="Select your image:"></field>
				<field name="logo_file_05" type="media" label="Select your image:"></field>
				<field name="logo_file_06" type="media" label="Select your image:"></field>
			</fieldset>
			<fieldset name="SETUP">
				<field name="speed" type="text" default="1000" label="MOD_SPEED_LABEL" description="" size="4" />
				<field name="pause" type="text" default="5000" label="MOD_PAUSE_LABEL" description="" size="4" />
				<field name="marginWidth" type="text" default="0" label="MOD_MARGIN_WIDTH_LABEL" description="" size="4" />
				<field name="mode" label="MOD_MODE_LABEL" type="radio" default="horizontal" description="" class="radio btn-group">
					<option value="horizontal">Horizontal</option>
					<option value="vertical">Vertical</option>
					<option value="fade">Fade</option>
				</field>
				<field name="auto" type="radio" class="btn-group btn-group-yesno" default="true" label="AUTO_START_LABLE" description="">
					<option value="true">JTRUE</option>
					<option value="false">JFALSE</option>
				</field>
				<field name="autoHover" type="radio" class="btn-group btn-group-yesno" default="true" label="AUTO_HOVER_LABLE" description="">
					<option value="true">JTRUE</option>
					<option value="false">JFALSE</option>
				</field>
				<field name="loop" type="radio" class="btn-group btn-group-yesno" default="true" label="LOOP_LABLE" description="">
					<option value="true">JTRUE</option>
					<option value="false">JFALSE</option>
				</field>
				<field name="controls" type="radio" class="btn-group btn-group-yesno" default="true" label="CONTROLS_LABLE" description="">
					<option value="true">JTRUE</option>
					<option value="false">JFALSE</option>
				</field>
				<field name="touch" type="radio" class="btn-group btn-group-yesno" default="true" label="ENABLE_TOUCH_LABLE" description="">
					<option value="true">JTRUE</option>
					<option value="false">JFALSE</option>
				</field>
				<field name="drag" type="radio" class="btn-group btn-group-yesno" default="true" label="ENABLE_DRAG_LABLE" description="">
					<option value="true">JTRUE</option>
					<option value="false">JFALSE</option>
				</field>
				<field name="easing" label="MOD_EASING_LABEL" type="radio" default="horizontal" description="" class="radio btn-group">
					<option value="null">None</option>
					<option value="linear">linear</option>
					<option value="ease">ease</option>
					<option value="ease-in">ease-in</option>
					<option value="ease-out">ease-out</option>
					<option value="ease-in-out">ease-in-out</option>
					<option value="cubic-bezier(n,n,n,n)">cubic-bezier(n,n,n,n)</option>
				</field>
				<field name="pager" type="radio" class="btn-group btn-group-yesno" default="true" label="PAGER_LABLE" description="">
					<option value="true">JTRUE</option>
					<option value="false">JFALSE</option>
				</field>
				<field name="carouselImg" label="MOD_CAROUSEL_IMG_LABEL" type="radio" default="1" description="" class="radio btn-group">
					<option value="1">1</option>
					<option value="2">2</option>
					<option value="3">3</option>
					<option value="4">4</option>
					<option value="5">5</option>
					<option value="6">6</option>
				</field>
				<field name="carouselImgSlide" label="MOD_CAROUSEL_IMG_SLIDE_LABEL" type="radio" default="1" description="" class="radio btn-group">
					<option value="1">1</option>
					<option value="2">2</option>
					<option value="3">3</option>
				</field>
				<field name="carouselImgWidth" type="text" default="500" label="MOD_CAROUSEL_IMG_WIDTH_LABEL" description="" size="4" />
				<field name="controlsPosition" type="radio" class="btn-group btn-group-yesno" default="inside" label="CONTROLS_POSITION_LABLE" description="">
					<option value="inside">Inside</option>
					<option value="outside">Outside</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
